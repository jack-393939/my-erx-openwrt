# Target System (必须)
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_ubnt_erx=y

# 基础设置
CONFIG_DEFAULT_TARGET_OPTIMIZE_FOR_SIZE=y
CONFIG_NO_STRIP=y
CONFIG_DEVEL=y
CONFIG_BUILD_LOG=y

# LuCI 完整界面
CONFIG_LUCI=y
CONFIG_LUCI_LANG_zh_Hans=y

# ShadowsocksR Plus+ (helloworld fork)
CONFIG_PACKAGE_luci-app-helloworld=y
CONFIG_PACKAGE_luci-i18n-helloworld-zh-cn=y

# ShadowsocksR 核心组件
CONFIG_PACKAGE_shadowsocksr-libev-ssr-redir=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-local=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-server=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-tunnel=y

# 必须依赖
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_dnsmasq-full=y

# 关闭调试节省空间
CONFIG_NO_STRIP=y
CONFIG_KERNEL_DEBUG_INFO=n
CONFIG_KERNEL_DEBUG_KERNEL=n
